#app
  w = 200px
  .sidebar
    width w
    background #f5f5f0
    min-height 100vh
    position fixed
    ul
      list-style-type none
      padding 0
      margin 0
      font-size 1rem
      text-decoration none
      li
        padding 3px
    &>ul
      font-size: 1.3rem
      &>li
        padding 7px
  main
    background #ebebe0
    min-height calc(100vh - 2px)
    margin-left w
    padding 1px